# RedFlag Environment Configuration
# Copy this file to .env and update with your actual values

# ==============================================================================
# CORE API KEYS (Required)
# ==============================================================================

# SerpAPI - Google Maps scraping
SERPAPI_KEY=your_serpapi_key_here

# Google PageSpeed Insights API  
GOOGLE_PAGESPEED_API_KEY=your_pagespeed_key_here

# BuiltWith API - Technology stack analysis
BUILTWITH_API_KEY=your_builtwith_key_here

# ==============================================================================
# GOOGLE SERVICES
# ==============================================================================

# Google Sheets API - Service Account Credentials
GOOGLE_SHEETS_CREDENTIALS=path/to/your/service_account.json

# ==============================================================================
# AI/ML SERVICES (Optional)
# ==============================================================================

# OpenAI API - For enhanced text analysis
OPENAI_API_KEY=your_openai_key_here

# Anthropic API - For advanced content generation  
ANTHROPIC_API_KEY=your_anthropic_key_here

# Perplexity API - For market research
PERPLEXITY_API_KEY=your_perplexity_key_here

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================

# Environment (development/staging/production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Log level (DEBUG/INFO/WARNING/ERROR)  
LOG_LEVEL=INFO

# Maximum results per search query
MAX_SEARCH_RESULTS=20

# API rate limiting (requests per minute)
API_RATE_LIMIT=30